---
import BaseLayout from '../layouts/BaseLayout.astro';
import Container from '../components/ui/Container.astro';
import Section from '../components/ui/Section.astro';
import Button from '../components/ui/Button.astro';
---

<BaseLayout
  title="Page Not Found"
  description="The page you're looking for doesn't exist. Let's get you back on track."
>
  <Section background="base" padding="lg" class="pt-28 md:pt-32">
    <Container narrow>
      <div class="text-center">
        <p class="text-8xl font-bold font-mono text-accent-primary/20 mb-6" aria-hidden="true">404</p>
        <h1 class="text-[length:var(--font-size-h2)] font-bold text-text-primary mb-4">
          Page Not Found
        </h1>
        <p class="text-[length:var(--font-size-body-lg)] text-text-secondary max-w-lg mx-auto leading-relaxed mb-8">
          The page you're looking for doesn't exist or has been moved. Let's get you back on track.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <Button href="/" variant="primary" size="lg" arrow>
            Back to Home
          </Button>
          <Button href="/contact" variant="outline" size="lg" arrow>
            Get in Touch
          </Button>
        </div>

        <div class="mt-16 pt-8 border-t border-border max-w-sm mx-auto">
          <p class="text-text-tertiary text-sm mb-4">Looking for something specific?</p>
          <ul class="flex flex-wrap justify-center gap-x-6 gap-y-2 text-sm">
            <li><a href="/services" class="text-accent-primary hover:underline">Services</a></li>
            <li><a href="/case-studies" class="text-accent-primary hover:underline">Case Studies</a></li>
            <li><a href="/blog" class="text-accent-primary hover:underline">Blog</a></li>
            <li><a href="/about" class="text-accent-primary hover:underline">About</a></li>
          </ul>
        </div>
      </div>
    </Container>
  </Section>
</BaseLayout>
