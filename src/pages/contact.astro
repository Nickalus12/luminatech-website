---
import BaseLayout from '../layouts/BaseLayout.astro';
import Section from '../components/ui/Section.astro';
import Container from '../components/ui/Container.astro';
import ContactForm from '../components/ContactForm';
import { contact, brand } from '../content/copy';
---

<BaseLayout
  title="Contact"
  description="Get in touch with Lumina ERP for Prophet 21 consulting. Schedule a free 30-minute consultation or send a message."
  schemaType="contact"
  schemaFaqs={contact.faq.items}
>

  <!-- Hero -->
  <Section background="base" padding="sm" class="pt-28 md:pt-32 pb-8 md:pb-12">
    <Container narrow>
      <div class="text-center">
        <h1 class="text-[length:var(--font-size-hero)] font-bold leading-[1.1] text-text-primary mb-4">
          {contact.hero.headline}
        </h1>
        <p class="text-[length:var(--font-size-body-lg)] text-text-secondary max-w-2xl mx-auto leading-relaxed">
          {contact.hero.subheadline}
        </p>
      </div>
    </Container>
  </Section>

  <!-- Contact Form + Sidebar -->
  <Section background="base" padding="md">
    <Container>
      <div class="grid grid-cols-1 lg:grid-cols-5 gap-12 lg:gap-16">

        <!-- Form (left, wider) -->
        <div class="lg:col-span-3">
          <div class="bg-bg-surface-1 border border-border rounded-xl p-6 md:p-8">
            <ContactForm client:load />
          </div>
        </div>

        <!-- Sidebar (right) -->
        <div class="lg:col-span-2 space-y-8">

          <!-- What to Expect -->
          <div class="bg-bg-surface-1 border border-border rounded-xl p-6">
            <h3 class="text-lg font-semibold text-text-primary mb-4">
              {contact.sidebar.heading}
            </h3>
            <ul class="space-y-3">
              {contact.sidebar.items.map((item) => (
                <li class="flex items-start gap-3 text-sm text-text-secondary leading-relaxed">
                  <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="var(--color-accent-success)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="mt-0.5 shrink-0" aria-hidden="true">
                    <path d="M20 6 9 17l-5-5" />
                  </svg>
                  <span>{item}</span>
                </li>
              ))}
            </ul>
          </div>

          <!-- Direct Contact -->
          <div class="bg-bg-surface-1 border border-border rounded-xl p-6 space-y-4">
            <div class="flex items-center gap-3">
              <div class="w-9 h-9 rounded-lg bg-accent-primary/10 flex items-center justify-center shrink-0">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="var(--color-accent-primary)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                  <rect width="20" height="16" x="2" y="4" rx="2" />
                  <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7" />
                </svg>
              </div>
              <div>
                <p class="text-xs text-text-tertiary uppercase tracking-wider font-medium">Email</p>
                <a href={`mailto:${contact.sidebar.directContact.email}`} class="text-sm text-accent-primary hover:underline no-underline">
                  {contact.sidebar.directContact.email}
                </a>
              </div>
            </div>

            <div class="flex items-center gap-3">
              <div class="w-9 h-9 rounded-lg bg-accent-primary/10 flex items-center justify-center shrink-0">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="var(--color-accent-primary)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                  <path d="M20 10c0 4.993-5.539 10.193-7.399 11.799a1 1 0 0 1-1.202 0C9.539 20.193 4 14.993 4 10a8 8 0 0 1 16 0" />
                  <circle cx="12" cy="10" r="3" />
                </svg>
              </div>
              <div>
                <p class="text-xs text-text-tertiary uppercase tracking-wider font-medium">Location</p>
                <p class="text-sm text-text-secondary">{contact.sidebar.directContact.location}</p>
              </div>
            </div>

            <div class="flex items-center gap-3">
              <div class="w-9 h-9 rounded-lg bg-accent-primary/10 flex items-center justify-center shrink-0">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="var(--color-accent-primary)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                  <circle cx="12" cy="12" r="10" />
                  <polyline points="12 6 12 12 16 14" />
                </svg>
              </div>
              <div>
                <p class="text-xs text-text-tertiary uppercase tracking-wider font-medium">Availability</p>
                <p class="text-sm text-text-secondary">{contact.sidebar.directContact.availability}</p>
              </div>
            </div>

            <p class="text-xs text-text-tertiary pt-2 border-t border-border">
              Remote consultations available nationwide. We typically respond within 24 hours.
            </p>
          </div>

          <!-- Schedule Widget -->
          <div class="bg-bg-surface-1 border border-border rounded-xl p-6 relative" id="schedule">
            <h3 class="text-lg font-semibold text-text-primary mb-2">
              {contact.sidebar.scheduling.heading}
            </h3>
            <p class="text-sm text-text-secondary mb-4 leading-relaxed">
              {contact.sidebar.scheduling.description}
            </p>
            <p class="text-xs text-text-tertiary mb-4">
              30 minutes, no obligation. We'll discuss your P21 setup, current challenges, and where I see opportunities.
            </p>
            <button
              type="button"
              id="schedule-btn"
              class="flex items-center justify-center gap-2 w-full px-5 py-3 bg-transparent border border-accent-primary text-accent-primary text-sm font-semibold rounded-lg hover:bg-accent-primary/10 hover:scale-[1.02] active:scale-[0.98] transition-all duration-fast cursor-pointer"
            >
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                <path d="M8 2v4" /><path d="M16 2v4" />
                <rect width="18" height="18" x="3" y="4" rx="2" />
                <path d="M3 10h18" />
              </svg>
              {contact.sidebar.scheduling.ctaLabel}
            </button>

            <!-- Frosted glass toast -->
            <div
              id="schedule-toast"
              class="pointer-events-none absolute inset-0 z-10 flex items-center justify-center rounded-xl opacity-0 transition-all duration-300"
              aria-live="polite"
            >
              <div class="frost-pane pointer-events-auto mx-4 max-w-sm rounded-xl border border-white/10 bg-white/5 px-6 py-5 text-center shadow-2xl backdrop-blur-xl">
                <div class="mx-auto mb-3 flex h-10 w-10 items-center justify-center rounded-full bg-accent-primary/15">
                  <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="var(--color-accent-primary)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                    <circle cx="12" cy="12" r="10" />
                    <polyline points="12 6 12 12 16 14" />
                  </svg>
                </div>
                <p class="text-sm font-semibold text-text-primary mb-1">Online Scheduling Coming Soon</p>
                <p class="text-xs text-text-secondary leading-relaxed">
                  Instant booking is on the way. For now, send a message through the form and I'll respond within 24 hours.
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </Container>
  </Section>

  <!-- FAQ Section -->
  <Section background="surface-1" padding="md">
    <Container narrow>
      <h2 class="text-[length:var(--font-size-h2)] font-bold text-text-primary text-center mb-12">
        {contact.faq.heading}
      </h2>
      <div class="space-y-4">
        {contact.faq.items.map((item) => (
          <details class="group bg-bg-surface-2 border border-border rounded-xl overflow-hidden">
            <summary class="flex items-center justify-between gap-4 px-6 py-5 cursor-pointer text-text-primary font-medium text-base select-none hover:bg-bg-surface-3 transition-colors duration-fast list-none [&::-webkit-details-marker]:hidden">
              <span>{item.question}</span>
              <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="shrink-0 text-text-tertiary transition-transform duration-normal group-open:rotate-180" aria-hidden="true">
                <path d="m6 9 6 6 6-6" />
              </svg>
            </summary>
            <div class="px-6 pb-5 text-sm text-text-secondary leading-relaxed">
              {item.answer}
            </div>
          </details>
        ))}
      </div>
    </Container>
  </Section>

  <!-- Schema Markup -->
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "ContactPage",
    "mainEntity": {
      "@type": "ProfessionalService",
      "name": "Lumina ERP",
      "description": "Expert Prophet 21 consulting for wholesale distributors.",
      "email": "Nickalus@LuminaResume.com",
      "url": "https://luminatech.xyz/contact",
      "areaServed": "US",
      "address": {
        "@type": "PostalAddress",
        "addressLocality": "Humble",
        "addressRegion": "TX",
        "addressCountry": "US"
      }
    }
  })} />

</BaseLayout>

<style>
  /* Scroll reveal animation for sections */
  @media (prefers-reduced-motion: no-preference) {
    details {
      animation: slide-up 0.6s cubic-bezier(0.4, 0, 0.2, 1) both;
    }

    details:nth-child(1) { animation-delay: 0ms; }
    details:nth-child(2) { animation-delay: 100ms; }
    details:nth-child(3) { animation-delay: 200ms; }
    details:nth-child(4) { animation-delay: 300ms; }
    details:nth-child(5) { animation-delay: 400ms; }
  }

  .frost-pane {
    box-shadow:
      0 0 0 1px rgba(255, 255, 255, 0.06),
      0 8px 40px rgba(0, 0, 0, 0.5),
      inset 0 1px 0 rgba(255, 255, 255, 0.08);
  }

  #schedule-toast.toast-visible {
    opacity: 1;
    pointer-events: auto;
  }

  #schedule-toast.toast-visible .frost-pane {
    animation: toast-in 0.35s cubic-bezier(0.16, 1, 0.3, 1) both;
  }

  #schedule-toast.toast-hiding .frost-pane {
    animation: toast-out 0.25s cubic-bezier(0.4, 0, 1, 1) both;
  }

  @keyframes toast-in {
    from { opacity: 0; transform: scale(0.92) translateY(8px); }
    to   { opacity: 1; transform: scale(1) translateY(0); }
  }

  @keyframes toast-out {
    from { opacity: 1; transform: scale(1) translateY(0); }
    to   { opacity: 0; transform: scale(0.95) translateY(4px); }
  }
</style>

<script>
  function initScheduleToast() {
    const btn = document.getElementById('schedule-btn');
    const toast = document.getElementById('schedule-toast');
    if (!btn || !toast) return;

    let hideTimer: ReturnType<typeof setTimeout> | null = null;

    function showToast() {
      if (hideTimer) clearTimeout(hideTimer);
      toast.classList.remove('toast-hiding');
      toast.classList.add('toast-visible');

      hideTimer = setTimeout(() => {
        toast.classList.add('toast-hiding');
        toast.classList.remove('toast-visible');
        setTimeout(() => toast.classList.remove('toast-hiding'), 250);
      }, 3500);
    }

    btn.addEventListener('click', showToast);

    toast.addEventListener('click', () => {
      if (hideTimer) clearTimeout(hideTimer);
      toast.classList.add('toast-hiding');
      toast.classList.remove('toast-visible');
      setTimeout(() => toast.classList.remove('toast-hiding'), 250);
    });
  }

  initScheduleToast();
  document.addEventListener('astro:after-swap', initScheduleToast);
</script>
