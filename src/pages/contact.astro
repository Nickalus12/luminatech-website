---
import BaseLayout from '../layouts/BaseLayout.astro';
import Section from '../components/ui/Section.astro';
import Container from '../components/ui/Container.astro';
import ContactForm from '../components/ContactForm';
import { contact, brand } from '../content/copy';
---

<BaseLayout
  title="Contact"
  description="Get in touch with Lumina ERP for Prophet 21 consulting. Schedule a free 30-minute consultation or send a message."
  schemaType="contact"
  schemaFaqs={contact.faq.items}
>

  <!-- Hero -->
  <Section background="base" padding="sm" class="pt-28 md:pt-32 pb-8 md:pb-12">
    <Container narrow>
      <div class="text-center">
        <h1 class="text-[length:var(--font-size-hero)] font-bold leading-[1.1] text-text-primary mb-4">
          {contact.hero.headline}
        </h1>
        <p class="text-[length:var(--font-size-body-lg)] text-text-secondary max-w-2xl mx-auto leading-relaxed">
          {contact.hero.subheadline}
        </p>
      </div>
    </Container>
  </Section>

  <!-- Contact Form + Sidebar -->
  <Section background="base" padding="md">
    <Container>
      <div class="grid grid-cols-1 lg:grid-cols-5 gap-12 lg:gap-16">

        <!-- Form (left, wider) -->
        <div class="lg:col-span-3">
          <div class="bg-bg-surface-1 border border-border rounded-xl p-6 md:p-8">
            <ContactForm client:load />
          </div>
        </div>

        <!-- Sidebar (right) -->
        <div class="lg:col-span-2 space-y-8">

          <!-- What to Expect -->
          <div class="bg-bg-surface-1 border border-border rounded-xl p-6">
            <h3 class="text-lg font-semibold text-text-primary mb-4">
              {contact.sidebar.heading}
            </h3>
            <ul class="space-y-3">
              {contact.sidebar.items.map((item) => (
                <li class="flex items-start gap-3 text-sm text-text-secondary leading-relaxed">
                  <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="var(--color-accent-success)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="mt-0.5 shrink-0" aria-hidden="true">
                    <path d="M20 6 9 17l-5-5" />
                  </svg>
                  <span>{item}</span>
                </li>
              ))}
            </ul>
          </div>

          <!-- Direct Contact -->
          <div class="bg-bg-surface-1 border border-border rounded-xl p-6 space-y-4">
            <div class="flex items-center gap-3">
              <div class="w-9 h-9 rounded-lg bg-accent-primary/10 flex items-center justify-center shrink-0">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="var(--color-accent-primary)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                  <rect width="20" height="16" x="2" y="4" rx="2" />
                  <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7" />
                </svg>
              </div>
              <div>
                <p class="text-xs text-text-tertiary uppercase tracking-wider font-medium">Email</p>
                <a href={`mailto:${contact.sidebar.directContact.email}`} class="text-sm text-accent-primary hover:underline no-underline">
                  {contact.sidebar.directContact.email}
                </a>
              </div>
            </div>

            <div class="flex items-center gap-3">
              <div class="w-9 h-9 rounded-lg bg-accent-primary/10 flex items-center justify-center shrink-0">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="var(--color-accent-primary)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                  <path d="M20 10c0 4.993-5.539 10.193-7.399 11.799a1 1 0 0 1-1.202 0C9.539 20.193 4 14.993 4 10a8 8 0 0 1 16 0" />
                  <circle cx="12" cy="10" r="3" />
                </svg>
              </div>
              <div>
                <p class="text-xs text-text-tertiary uppercase tracking-wider font-medium">Location</p>
                <p class="text-sm text-text-secondary">{contact.sidebar.directContact.location}</p>
              </div>
            </div>

            <div class="flex items-center gap-3">
              <div class="w-9 h-9 rounded-lg bg-accent-primary/10 flex items-center justify-center shrink-0">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="var(--color-accent-primary)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                  <circle cx="12" cy="12" r="10" />
                  <polyline points="12 6 12 12 16 14" />
                </svg>
              </div>
              <div>
                <p class="text-xs text-text-tertiary uppercase tracking-wider font-medium">Availability</p>
                <p class="text-sm text-text-secondary">{contact.sidebar.directContact.availability}</p>
              </div>
            </div>

            <p class="text-xs text-text-tertiary pt-2 border-t border-border">
              Remote consultations available nationwide. We typically respond within 24 hours.
            </p>
          </div>

          <!-- Schedule Widget - HubSpot Meetings -->
          <div class="bg-bg-surface-1 border border-border rounded-xl p-6 overflow-hidden" id="schedule">
            <h3 class="text-lg font-semibold text-text-primary mb-2">
              {contact.sidebar.scheduling.heading}
            </h3>
            <p class="text-sm text-text-secondary mb-4 leading-relaxed">
              {contact.sidebar.scheduling.description}
            </p>
            <p class="text-xs text-text-tertiary mb-4">
              30 minutes, no obligation. We'll discuss your P21 setup, current challenges, and where we see opportunities.
            </p>
            <div class="meetings-iframe-container" data-src="https://meetings-na2.hubspot.com/nickalus-brewer?embed=true"></div>
            <script type="text/javascript" src="https://static.hsappstatic.net/MeetingsEmbed/ex/MeetingsEmbedCode.js" is:inline></script>
          </div>
        </div>
      </div>
    </Container>
  </Section>

  <!-- FAQ Section -->
  <Section background="surface-1" padding="md">
    <Container narrow>
      <h2 class="text-[length:var(--font-size-h2)] font-bold text-text-primary text-center mb-12">
        {contact.faq.heading}
      </h2>
      <div class="space-y-4">
        {contact.faq.items.map((item) => (
          <details class="group bg-bg-surface-2 border border-border rounded-xl overflow-hidden">
            <summary class="flex items-center justify-between gap-4 px-6 py-5 cursor-pointer text-text-primary font-medium text-base select-none hover:bg-bg-surface-3 transition-colors duration-fast list-none [&::-webkit-details-marker]:hidden">
              <span>{item.question}</span>
              <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="shrink-0 text-text-tertiary transition-transform duration-normal group-open:rotate-180" aria-hidden="true">
                <path d="m6 9 6 6 6-6" />
              </svg>
            </summary>
            <div class="px-6 pb-5 text-sm text-text-secondary leading-relaxed">
              {item.answer}
            </div>
          </details>
        ))}
      </div>
    </Container>
  </Section>

  <!-- Schema Markup -->
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "ContactPage",
    "mainEntity": {
      "@type": "ProfessionalService",
      "name": "Lumina ERP",
      "description": "Expert Prophet 21 consulting for wholesale distributors.",
      "email": "Support@Lumina-ERP.com",
      "url": "https://luminatech.xyz/contact",
      "areaServed": "US",
      "address": {
        "@type": "PostalAddress",
        "addressLocality": "Humble",
        "addressRegion": "TX",
        "addressCountry": "US"
      }
    }
  })} />

</BaseLayout>

<style>
  /* Scroll reveal animation for sections */
  @media (prefers-reduced-motion: no-preference) {
    details {
      animation: slide-up 0.6s cubic-bezier(0.4, 0, 0.2, 1) both;
    }

    details:nth-child(1) { animation-delay: 0ms; }
    details:nth-child(2) { animation-delay: 100ms; }
    details:nth-child(3) { animation-delay: 200ms; }
    details:nth-child(4) { animation-delay: 300ms; }
    details:nth-child(5) { animation-delay: 400ms; }
  }

  /* Calendly widget dark mode adjustments */
  .calendly-inline-widget {
    border-radius: 0.5rem;
  }
</style>

