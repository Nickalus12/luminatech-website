---
import BaseLayout from '../layouts/BaseLayout.astro';
import Section from '../components/ui/Section.astro';
import Container from '../components/ui/Container.astro';
import ConsultationExperience from '../components/ConsultationExperience';
import FAQTicker from '../components/ui/FAQTicker';
import { contact, brand } from '../content/copy';
---

<BaseLayout
  title="Contact"
  description="Get in touch with Lumina Erp for Prophet 21 consulting. Schedule a free 30-minute consultation or send a message."
  schemaType="contact"
  schemaFaqs={contact.faq.items}
>

  <!-- Prefetch Mapbox GL JS assets (loaded after form submission) -->
  <link rel="prefetch" href="https://api.mapbox.com/mapbox-gl-js/v3.4.0/mapbox-gl.js" as="script" />
  <link rel="prefetch" href="https://api.mapbox.com/mapbox-gl-js/v3.4.0/mapbox-gl.css" as="style" />

  <!-- Hero -->
  <Section background="base" padding="sm" class="pt-28 md:pt-32 pb-8 md:pb-12">
    <Container narrow>
      <div class="text-center scroll-reveal">
        <h1 class="text-[length:var(--font-size-hero)] font-bold leading-[1.1] text-text-primary mb-4" transition:name="hero">
          Let's Talk <span class="p21-hero-text">P21</span>
        </h1>
        <p class="text-[length:var(--font-size-body-lg)] text-text-secondary max-w-2xl mx-auto leading-relaxed">
          {contact.hero.subheadline}
        </p>
      </div>
    </Container>
  </Section>

  <!-- Contact Form + Sidebar -->
  <Section background="base" padding="md">
    <Container>
      <div class="grid grid-cols-1 lg:grid-cols-5 gap-12 lg:gap-16">

        <!-- Form → Celebration → Map Experience (left, wider) -->
        <div class="lg:col-span-3 scroll-reveal">
          <ConsultationExperience client:idle />
        </div>

        <!-- Sidebar (right) -->
        <div class="lg:col-span-2 space-y-8 scroll-reveal" style="animation-delay: 150ms;">

          <!-- What to Expect -->
          <div class="bg-bg-surface-1 border border-border rounded-xl p-6">
            <h3 class="text-lg font-semibold text-text-primary mb-4">
              {contact.sidebar.heading}
            </h3>
            <ul class="space-y-3">
              {contact.sidebar.items.map((item) => (
                <li class="flex items-start gap-3 text-sm text-text-secondary leading-relaxed">
                  <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="var(--color-accent-success)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="mt-0.5 shrink-0" aria-hidden="true">
                    <path d="M20 6 9 17l-5-5" />
                  </svg>
                  <span>{item}</span>
                </li>
              ))}
            </ul>
          </div>

          <!-- Direct Contact + Embedded Map -->
          <div class="bg-bg-surface-1 border border-border rounded-xl p-6 space-y-4">
            <div class="flex items-center gap-3">
              <div class="w-9 h-9 rounded-lg bg-accent-primary/10 flex items-center justify-center shrink-0">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="var(--color-accent-primary)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                  <rect width="20" height="16" x="2" y="4" rx="2" />
                  <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7" />
                </svg>
              </div>
              <div>
                <p class="text-xs text-text-tertiary uppercase tracking-wider font-medium">Email</p>
                <a href={`mailto:${contact.sidebar.directContact.email}`} class="text-sm text-accent-primary hover:underline no-underline">
                  {contact.sidebar.directContact.email}
                </a>
              </div>
            </div>

            <div class="flex items-center gap-3">
              <div class="w-9 h-9 rounded-lg bg-accent-primary/10 flex items-center justify-center shrink-0">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="var(--color-accent-primary)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                  <path d="M20 10c0 4.993-5.539 10.193-7.399 11.799a1 1 0 0 1-1.202 0C9.539 20.193 4 14.993 4 10a8 8 0 0 1 16 0" />
                  <circle cx="12" cy="10" r="3" />
                </svg>
              </div>
              <div>
                <p class="text-xs text-text-tertiary uppercase tracking-wider font-medium">Location</p>
                <p class="text-sm text-text-secondary">{contact.sidebar.directContact.location}</p>
              </div>
            </div>

            <div class="flex items-center gap-3">
              <div class="w-9 h-9 rounded-lg bg-accent-primary/10 flex items-center justify-center shrink-0">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="var(--color-accent-primary)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                  <circle cx="12" cy="12" r="10" />
                  <polyline points="12 6 12 12 16 14" />
                </svg>
              </div>
              <div>
                <p class="text-xs text-text-tertiary uppercase tracking-wider font-medium">Availability</p>
                <p class="text-sm text-text-secondary">{contact.sidebar.directContact.availability}</p>
              </div>
            </div>

            <p class="text-xs text-text-tertiary">
              Remote consultations available nationwide. We typically respond within 24 hours.
            </p>
          </div>

          <!-- Schedule Widget - Google Calendar -->
          <div class="bg-bg-surface-1 border border-border rounded-xl p-6" id="schedule">
            <h3 class="text-lg font-semibold text-text-primary mb-2">
              {contact.sidebar.scheduling.heading}
            </h3>
            <p class="text-sm text-text-secondary mb-4 leading-relaxed">
              {contact.sidebar.scheduling.description}
            </p>
            <p class="text-xs text-text-tertiary mb-4">
              30 minutes, no obligation. We'll discuss your <span class="text-accent-primary font-semibold">P21</span> setup, current challenges, and where we see opportunities.
            </p>
            <a
              href="https://calendar.app.google/xSALCT4tFji7kyMq6"
              target="_blank"
              rel="noopener noreferrer"
              class="w-full inline-flex items-center justify-center gap-3 px-6 py-3.5 bg-accent-primary text-white text-base font-semibold rounded-lg hover:bg-accent-primary-hover hover:scale-[1.02] active:scale-[0.98] transition-all duration-200 shadow-glow no-underline"
            >
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                <rect width="18" height="18" x="3" y="4" rx="2" ry="2" />
                <line x1="16" x2="16" y1="2" y2="6" />
                <line x1="8" x2="8" y1="2" y2="6" />
                <line x1="3" x2="21" y1="10" y2="10" />
              </svg>
              Schedule a Free Consultation
            </a>
            <p class="text-xs text-text-tertiary text-center mt-3">
              Powered by Google Calendar &middot; Includes Google Meet link
            </p>
          </div>
        </div>
      </div>
    </Container>
  </Section>

  <!-- FAQ Ticker -->
  <Section background="base" padding="sm">
    <FAQTicker items={contact.faq.items} heading={contact.faq.heading} client:visible />
  </Section>

  <!-- Schema Markup -->
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "ContactPage",
    "mainEntity": {
      "@type": "ProfessionalService",
      "name": "Lumina Erp",
      "description": "Expert Prophet 21 consulting for wholesale distributors.",
      "email": "Support@Lumina-ERP.com",
      "url": "https://luminatech.xyz/contact",
      "areaServed": "US",
      "address": {
        "@type": "PostalAddress",
        "addressLocality": "Humble",
        "addressRegion": "TX",
        "addressCountry": "US"
      }
    }
  })} />

</BaseLayout>

<style>
  /* ── Hero "P21" gradient glow treatment ── */
  .p21-hero-text {
    position: relative;
    background: linear-gradient(135deg, #3B82F6 0%, #60A5FA 40%, #A78BFA 70%, #8B5CF6 100%);
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    filter: drop-shadow(0 0 24px rgba(59, 130, 246, 0.35)) drop-shadow(0 0 60px rgba(139, 92, 246, 0.15));
  }

  @media (prefers-reduced-motion: no-preference) {
    .p21-hero-text {
      background-size: 200% 200%;
      animation: p21-shimmer 6s ease-in-out infinite;
    }

    @keyframes p21-shimmer {
      0%, 100% { background-position: 0% 50%; }
      50% { background-position: 100% 50%; }
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .p21-hero-text {
      animation: none;
    }
  }
</style>
