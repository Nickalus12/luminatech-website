---
import BaseLayout from '../layouts/BaseLayout.astro';
import Section from '../components/ui/Section.astro';
import Container from '../components/ui/Container.astro';
import Card from '../components/ui/Card.astro';
import Badge from '../components/ui/Badge.astro';
import Button from '../components/ui/Button.astro';
import { about, brand } from '../content/copy';
---

<BaseLayout
  title="About"
  description="Meet the Lumina Erp team -- P21 practitioner-consultants who use Prophet 21 every day at real wholesale distribution operations. Based in Humble, TX, serving distributors nationwide."
  schemaType="about"
>

  <!-- Hero -->
  <Section background="base" padding="sm" class="pt-28 md:pt-32 pb-8 md:pb-12 relative overflow-hidden">
    <div class="absolute top-0 right-0 w-96 h-96 bg-accent-primary/5 rounded-full blur-3xl pointer-events-none"></div>
    <Container>
      <div class="max-w-3xl">
        <Badge variant="primary" class="mb-6">Practitioner-Consultants</Badge>
        <h1 class="text-[length:var(--font-size-hero)] font-bold leading-[1.1] text-text-primary mb-4">
          P21 Expertise Built on Daily Hands-On Experience
        </h1>
        <p class="text-[length:var(--font-size-body-lg)] text-text-secondary max-w-2xl leading-relaxed">
          Not a generic consulting firm. A team of working ERP practitioners who solve real Prophet 21 problems at real distribution companies -- every single day.
        </p>
      </div>
    </Container>
  </Section>

  <!-- Founder Story -->
  <Section background="base" padding="md">
    <Container>
      <div class="grid grid-cols-1 lg:grid-cols-5 gap-12 lg:gap-16">

        <!-- Story (left, wider) -->
        <div class="lg:col-span-3">
          <h2 class="text-[length:var(--font-size-h2)] font-bold text-text-primary mb-8">
            {about.intro.greeting}
          </h2>

          <div class="space-y-6 text-text-secondary leading-relaxed text-[length:var(--font-size-body-lg)]">
            {about.intro.paragraphs.map((paragraph) => (
              <p>{paragraph}</p>
            ))}
          </div>

          <div class="mt-8 pt-8 border-t border-border">
            <p class="text-text-tertiary text-sm leading-relaxed italic">
              {about.personal.text}
            </p>
          </div>
        </div>

        <!-- Credential Cards (right sidebar) -->
        <div class="lg:col-span-2 space-y-6">
          {about.credentials.map((credential) => (
            <div class="bg-bg-surface-1 border border-border rounded-xl p-6">
              <span class="text-[length:var(--font-size-metric)] font-mono font-bold text-accent-primary block mb-1">
                {credential.metric}
              </span>
              <h3 class="text-lg font-semibold text-text-primary mb-2">{credential.label}</h3>
              <p class="text-sm text-text-secondary leading-relaxed">{credential.detail}</p>
            </div>
          ))}
        </div>
      </div>
    </Container>
  </Section>

  <!-- Skills / Expertise Grid -->
  <Section background="surface-1" padding="md">
    <Container>
      <div class="text-center mb-12">
        <h2 class="text-[length:var(--font-size-h2)] font-bold text-text-primary mb-4">
          {about.skills.heading}
        </h2>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 lg:gap-8">
        {about.skills.categories.map((category) => (
          <div class="bg-bg-surface-2 border border-border rounded-xl p-6 md:p-8">
            <h3 class="text-lg font-semibold text-text-primary mb-5">{category.title}</h3>
            <div class="flex flex-wrap gap-2">
              {category.items.map((item) => (
                <span class="inline-flex items-center px-3 py-1.5 text-sm font-medium rounded-full bg-bg-surface-3 text-text-secondary">
                  {item}
                </span>
              ))}
            </div>
          </div>
        ))}
      </div>

      <!-- Extended Expertise Tags -->
      <div class="mt-10 text-center">
        <p class="text-sm text-text-tertiary mb-4">Also experienced with</p>
        <div class="flex flex-wrap justify-center gap-2">
          {[
            "Prophet 21 Administration",
            "Kinetic Cloud Migration",
            "Business Rules Development",
            "Custom SQL Reporting",
            "Python Automation",
            "API & EDI Integrations",
          ].map((tag) => (
            <span class="inline-flex items-center px-3 py-1.5 text-xs font-medium rounded-full bg-accent-primary/10 text-accent-primary">
              {tag}
            </span>
          ))}
        </div>
      </div>
    </Container>
  </Section>

  <!-- Process Timeline -->
  <Section background="base" padding="md">
    <Container>
      <div class="text-center mb-12">
        <h2 class="text-[length:var(--font-size-h2)] font-bold text-text-primary mb-4">
          {about.process.heading}
        </h2>
        <p class="text-[length:var(--font-size-body-lg)] text-text-secondary max-w-2xl mx-auto">
          A straightforward process built on transparency and results.
        </p>
      </div>

      <!-- Desktop: horizontal, Mobile: vertical -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        {about.process.steps.map((step, index) => (
          <div class="relative">
            {index < about.process.steps.length - 1 && (
              <div class="hidden lg:block absolute top-8 left-full w-6 border-t-2 border-dashed border-border z-10"></div>
            )}
            <div class="bg-bg-surface-1 border border-border rounded-xl p-6 h-full">
              <span class="text-3xl font-mono font-bold text-accent-primary/30 mb-3 block">
                {String(index + 1).padStart(2, '0')}
              </span>
              <h3 class="text-lg font-semibold text-text-primary mb-2">{step.title}</h3>
              <p class="text-sm text-text-secondary leading-relaxed">{step.description}</p>
            </div>
          </div>
        ))}
      </div>
    </Container>
  </Section>

  <!-- Background & Qualifications -->
  <Section background="surface-1" padding="md">
    <Container>
      <div class="text-center mb-12">
        <h2 class="text-[length:var(--font-size-h2)] font-bold text-text-primary mb-4">
          Background & Qualifications
        </h2>
        <p class="text-[length:var(--font-size-body-lg)] text-text-secondary max-w-xl mx-auto">
          Real credentials from real experience -- not just certifications on a wall.
        </p>
      </div>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
        <!-- Computer Science -->
        <div class="bg-bg-surface-2 border border-border rounded-xl p-6 text-center">
          <div class="w-12 h-12 mx-auto mb-4 rounded-lg bg-accent-primary/10 flex items-center justify-center">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="var(--color-accent-primary)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
              <path d="M22 10v6M2 10l10-5 10 5-10 5z" /><path d="M6 12v5c3 3 9 3 12 0v-5" />
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-text-primary mb-1">Computer Science</h3>
          <p class="text-sm text-accent-primary font-medium mb-2">Full Sail University</p>
          <p class="text-xs text-text-tertiary leading-relaxed">Formal CS foundation in software engineering, databases, and systems architecture.</p>
        </div>
        <!-- Active P21 Admin -->
        <div class="bg-bg-surface-2 border border-border rounded-xl p-6 text-center">
          <div class="w-12 h-12 mx-auto mb-4 rounded-lg bg-accent-primary/10 flex items-center justify-center">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="var(--color-accent-primary)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
              <rect width="18" height="18" x="3" y="3" rx="2" /><path d="M7 7h.01M7 12h.01M12 7h.01M12 12h.01M17 7h.01M17 12h.01M7 17h.01M12 17h.01M17 17h.01" />
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-text-primary mb-1">Active P21 Administrator</h3>
          <p class="text-sm text-accent-primary font-medium mb-2">Daily Production Use</p>
          <p class="text-xs text-text-tertiary leading-relaxed">Not project-based consulting -- we administer P21 in a live distribution environment every day.</p>
        </div>
        <!-- Full Stack Dev -->
        <div class="bg-bg-surface-2 border border-border rounded-xl p-6 text-center">
          <div class="w-12 h-12 mx-auto mb-4 rounded-lg bg-accent-primary/10 flex items-center justify-center">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="var(--color-accent-primary)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
              <polyline points="16 18 22 12 16 6" /><polyline points="8 6 2 12 8 18" />
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-text-primary mb-1">Full Stack Development</h3>
          <p class="text-sm text-accent-primary font-medium mb-2">C# &middot; SQL &middot; Python &middot; REST</p>
          <p class="text-xs text-text-tertiary leading-relaxed">We build custom solutions from the database layer up through business rules and integrations.</p>
        </div>
        <!-- Cloud & Azure -->
        <div class="bg-bg-surface-2 border border-border rounded-xl p-6 text-center">
          <div class="w-12 h-12 mx-auto mb-4 rounded-lg bg-accent-primary/10 flex items-center justify-center">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="var(--color-accent-primary)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
              <path d="M17.5 19H9a7 7 0 1 1 6.71-9h1.79a4.5 4.5 0 1 1 0 9Z" />
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-text-primary mb-1">Cloud & Infrastructure</h3>
          <p class="text-sm text-accent-primary font-medium mb-2">Azure &middot; Intune &middot; SaaS</p>
          <p class="text-xs text-text-tertiary leading-relaxed">Cloud migration planning, Azure administration, and modern infrastructure management.</p>
        </div>
      </div>
    </Container>
  </Section>

  <!-- Bottom CTA -->
  <Section background="gradient" padding="lg">
    <Container narrow>
      <div class="text-center">
        <h2 class="text-[length:var(--font-size-h2)] font-bold text-text-primary mb-4">
          {about.cta.heading}
        </h2>
        <p class="text-[length:var(--font-size-body-lg)] text-text-secondary max-w-xl mx-auto mb-8">
          {about.cta.subheading}
        </p>
        <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
          <Button href={about.cta.cta.href} variant="primary" size="lg" arrow glow>
            {about.cta.cta.label}
          </Button>
          <span class="text-text-secondary text-sm">
            or email <a href={`mailto:${brand.email}`} class="text-accent-primary hover:underline no-underline">{brand.email}</a>
          </span>
        </div>
      </div>
    </Container>
  </Section>

  <!-- Person Schema Markup -->
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "ProfilePage",
    "mainEntity": {
      "@type": "Person",
      "name": "Nick Brewer",
      "jobTitle": "ERP Administrator & Prophet 21 Consultant",
      "description": "Founder of Lumina Erp. Working ERP administrator who uses Prophet 21 daily at a wholesale distribution company.",
      "url": "https://luminatech.xyz/about",
      "worksFor": {
        "@type": "Organization",
        "name": "Lumina Erp",
        "url": "https://luminatech.xyz"
      },
      "address": {
        "@type": "PostalAddress",
        "addressLocality": "Humble",
        "addressRegion": "TX",
        "addressCountry": "US"
      },
      "knowsAbout": [
        "Prophet 21",
        "Epicor ERP",
        "C# .NET Development",
        "SQL Server",
        "Python",
        "Wholesale Distribution",
        "ERP Consulting",
        "Cloud Migration"
      ]
    }
  })} />

</BaseLayout>

<style>
  /* Scroll reveal animation for sections */
  @media (prefers-reduced-motion: no-preference) {
    .scroll-reveal {
      opacity: 0;
      transform: translateY(20px);
      transition: opacity 0.6s cubic-bezier(0.4, 0, 0.2, 1), transform 0.6s cubic-bezier(0.4, 0, 0.2, 1);
    }
    .scroll-reveal.visible {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>

<script>
  function initAboutAnimations() {
    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            entry.target.classList.add('visible');
            observer.unobserve(entry.target);
          }
        });
      },
      { threshold: 0.1, rootMargin: '0px 0px -50px 0px' }
    );

    document.querySelectorAll('.scroll-reveal').forEach((el) => {
      observer.observe(el);
    });
  }

  initAboutAnimations();
  document.addEventListener('astro:after-swap', initAboutAnimations);
</script>
