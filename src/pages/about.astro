---
import BaseLayout from '../layouts/BaseLayout.astro';
import Section from '../components/ui/Section.astro';
import Container from '../components/ui/Container.astro';
import Card from '../components/ui/Card.astro';
import Badge from '../components/ui/Badge.astro';
import Button from '../components/ui/Button.astro';
import TextReveal from '../components/ui/TextReveal';
import { about, brand } from '../content/copy';
---

<BaseLayout
  title="About"
  description="Meet the Lumina Erp team -- P21 practitioner-consultants who use Prophet 21 every day at real wholesale distribution operations. Based in Humble, TX, serving distributors nationwide."
  schemaType="about"
>

  <!-- Hero -->
  <Section background="base" padding="sm" class="pt-28 md:pt-32 pb-8 md:pb-12 relative overflow-hidden about-hero-section">
    <div class="absolute top-0 right-0 w-96 h-96 bg-accent-primary/5 rounded-full blur-3xl pointer-events-none about-orb-1"></div>
    <div class="absolute bottom-0 left-0 w-72 h-72 bg-accent-violet/5 rounded-full blur-3xl pointer-events-none about-orb-2"></div>
    <Container>
      <div class="max-w-3xl scroll-reveal">
        <Badge variant="primary" class="mb-6">Practitioner-Consultants</Badge>
        <TextReveal
          text="P21 Expertise Built on Daily Hands-On Experience"
          as="h1"
          className="text-[length:var(--font-size-hero)] font-bold leading-[1.1] text-text-primary mb-4"
          client:visible
        />
        <p class="text-[length:var(--font-size-body-lg)] text-text-secondary max-w-2xl leading-relaxed">
          Not a generic consulting firm. A team of working ERP practitioners who solve real Prophet 21 problems at real distribution companies -- every single day.
        </p>
      </div>
    </Container>
  </Section>

  <!-- Founder Story -->
  <Section background="base" padding="md">
    <Container>
      <div class="grid grid-cols-1 lg:grid-cols-5 gap-12 lg:gap-16">

        <!-- Story (left, wider) -->
        <div class="lg:col-span-3 scroll-reveal">
          <h2 class="text-[length:var(--font-size-h2)] font-bold text-text-primary mb-8">
            {about.intro.greeting}
          </h2>

          <div class="space-y-6 text-text-secondary leading-relaxed text-[length:var(--font-size-body-lg)]">
            {about.intro.paragraphs.map((paragraph) => (
              <p>{paragraph}</p>
            ))}
          </div>

          <div class="mt-8 pt-8 border-t border-border">
            <p class="text-text-tertiary text-sm leading-relaxed italic">
              {about.personal.text}
            </p>
          </div>
        </div>

        <!-- Credential Cards (right sidebar) -->
        <div class="lg:col-span-2 space-y-6" data-stagger-group>
          {about.credentials.map((credential, i) => (
            <div class="about-credential-card stagger-item bg-bg-surface-1 border border-border rounded-xl p-6">
              <span class="text-[length:var(--font-size-metric)] font-mono font-bold text-accent-primary block mb-1 about-metric-value">
                {credential.metric}
              </span>
              <h3 class="text-lg font-semibold text-text-primary mb-2">{credential.label}</h3>
              <p class="text-sm text-text-secondary leading-relaxed">{credential.detail}</p>
            </div>
          ))}
        </div>
      </div>
    </Container>
  </Section>

  <!-- Skills / Expertise Grid -->
  <Section background="surface-1" padding="md">
    <Container>
      <div class="text-center mb-12 scroll-reveal">
        <h2 class="text-[length:var(--font-size-h2)] font-bold text-text-primary mb-4">
          {about.skills.heading}
        </h2>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 lg:gap-8" data-stagger-group>
        {about.skills.categories.map((category, i) => (
          <div class="bg-bg-surface-2 border border-border rounded-xl p-6 md:p-8 stagger-item">
            <h3 class="text-lg font-semibold text-text-primary mb-5">{category.title}</h3>
            <div class="flex flex-wrap gap-2">
              {category.items.map((item) => (
                <span class="inline-flex items-center px-3 py-1.5 text-sm font-medium rounded-full bg-bg-surface-3 text-text-secondary">
                  {item}
                </span>
              ))}
            </div>
          </div>
        ))}
      </div>

      <!-- Extended Expertise Tags -->
      <div class="mt-10 text-center">
        <p class="text-sm text-text-tertiary mb-4">Also experienced with</p>
        <div class="flex flex-wrap justify-center gap-2">
          {[
            "Prophet 21 Administration",
            "Kinetic Cloud Migration",
            "Business Rules Development",
            "Custom SQL Reporting",
            "Python Automation",
            "API & EDI Integrations",
          ].map((tag) => (
            <span class="inline-flex items-center px-3 py-1.5 text-xs font-medium rounded-full bg-accent-primary/10 text-accent-primary">
              {tag}
            </span>
          ))}
        </div>
      </div>
    </Container>
  </Section>

  <!-- Process Timeline -->
  <Section background="base" padding="md">
    <Container>
      <div class="text-center mb-12 scroll-reveal">
        <h2 class="text-[length:var(--font-size-h2)] font-bold text-text-primary mb-4">
          {about.process.heading}
        </h2>
        <p class="text-[length:var(--font-size-body-lg)] text-text-secondary max-w-2xl mx-auto">
          A straightforward process built on transparency and results.
        </p>
      </div>

      <!-- Desktop: horizontal, Mobile: vertical -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        {about.process.steps.map((step, index) => (
          <div class="relative scroll-reveal" style={`animation-delay: ${index * 100}ms;`}>
            {index < about.process.steps.length - 1 && (
              <div class="hidden lg:block absolute top-8 left-full w-6 z-10">
                <div class="about-timeline-connector border-t-2 border-dashed border-border w-full"></div>
              </div>
            )}
            <div class="about-process-card bg-bg-surface-1 border border-border rounded-xl p-6 h-full">
              <span class="text-3xl font-mono font-bold about-step-number mb-3 block">
                {String(index + 1).padStart(2, '0')}
              </span>
              <h3 class="text-lg font-semibold text-text-primary mb-2">{step.title}</h3>
              <p class="text-sm text-text-secondary leading-relaxed">{step.description}</p>
            </div>
          </div>
        ))}
      </div>
    </Container>
  </Section>

  <!-- Our Technical Foundation -->
  <Section background="surface-1" padding="md">
    <Container>
      <div class="text-center mb-12 scroll-reveal">
        <h2 class="text-[length:var(--font-size-h2)] font-bold text-text-primary mb-4">
          Built on Real Experience
        </h2>
        <p class="text-[length:var(--font-size-body-lg)] text-text-secondary max-w-xl mx-auto">
          Our expertise comes from daily production work -- not whitepapers and theory.
        </p>
      </div>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
        <!-- Formal CS Foundation -->
        <div class="about-foundation-card bg-bg-surface-2 border border-border rounded-xl p-6 text-center scroll-reveal">
          <div class="w-12 h-12 mx-auto mb-4 rounded-lg bg-accent-primary/10 flex items-center justify-center about-icon-wrap">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="var(--color-accent-primary)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
              <path d="M22 10v6M2 10l10-5 10 5-10 5z" /><path d="M6 12v5c3 3 9 3 12 0v-5" />
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-text-primary mb-1">Formal CS Foundation</h3>
          <p class="text-sm text-accent-primary font-medium mb-2">Degree-Backed Engineering</p>
          <p class="text-xs text-text-tertiary leading-relaxed">Our solutions are built on formal computer science education -- from database theory to systems architecture, we bring academic rigor to every engagement.</p>
        </div>
        <!-- Battle-Tested in Production -->
        <div class="about-foundation-card bg-bg-surface-2 border border-border rounded-xl p-6 text-center scroll-reveal" style="animation-delay: 100ms;">
          <div class="w-12 h-12 mx-auto mb-4 rounded-lg bg-accent-primary/10 flex items-center justify-center about-icon-wrap">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="var(--color-accent-primary)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
              <rect width="18" height="18" x="3" y="3" rx="2" /><path d="M7 7h.01M7 12h.01M12 7h.01M12 12h.01M17 7h.01M17 12h.01M7 17h.01M12 17h.01M17 17h.01" />
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-text-primary mb-1">Battle-Tested in Production</h3>
          <p class="text-sm text-accent-primary font-medium mb-2">Not Theoretical -- Proven Daily</p>
          <p class="text-xs text-text-tertiary leading-relaxed">Our team works inside live P21 environments every day. This isn't project-based consulting -- it's knowledge born from daily production operations.</p>
        </div>
        <!-- Full Stack Dev -->
        <div class="about-foundation-card bg-bg-surface-2 border border-border rounded-xl p-6 text-center scroll-reveal" style="animation-delay: 200ms;">
          <div class="w-12 h-12 mx-auto mb-4 rounded-lg bg-accent-primary/10 flex items-center justify-center about-icon-wrap">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="var(--color-accent-primary)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
              <polyline points="16 18 22 12 16 6" /><polyline points="8 6 2 12 8 18" />
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-text-primary mb-1">Full Stack Development</h3>
          <p class="text-sm text-accent-primary font-medium mb-2">C# &middot; SQL &middot; Python &middot; REST</p>
          <p class="text-xs text-text-tertiary leading-relaxed">We build custom solutions from the database layer up through business rules and integrations.</p>
        </div>
        <!-- Cloud & Azure -->
        <div class="about-foundation-card bg-bg-surface-2 border border-border rounded-xl p-6 text-center scroll-reveal" style="animation-delay: 300ms;">
          <div class="w-12 h-12 mx-auto mb-4 rounded-lg bg-accent-primary/10 flex items-center justify-center about-icon-wrap">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="var(--color-accent-primary)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
              <path d="M17.5 19H9a7 7 0 1 1 6.71-9h1.79a4.5 4.5 0 1 1 0 9Z" />
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-text-primary mb-1">Cloud & Infrastructure</h3>
          <p class="text-sm text-accent-primary font-medium mb-2">Azure &middot; Intune &middot; SaaS</p>
          <p class="text-xs text-text-tertiary leading-relaxed">Cloud migration planning, Azure administration, and modern infrastructure management.</p>
        </div>
      </div>
    </Container>
  </Section>

  <!-- Bottom CTA -->
  <Section background="gradient" padding="lg">
    <Container narrow>
      <div class="text-center scroll-reveal">
        <h2 class="text-[length:var(--font-size-h2)] font-bold text-text-primary mb-4">
          {about.cta.heading}
        </h2>
        <p class="text-[length:var(--font-size-body-lg)] text-text-secondary max-w-xl mx-auto mb-8">
          {about.cta.subheading}
        </p>
        <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
          <Button href={about.cta.cta.href} variant="primary" size="lg" arrow glow>
            {about.cta.cta.label}
          </Button>
          <span class="text-text-secondary text-sm">
            or email <a href={`mailto:${brand.email}`} class="text-accent-primary hover:underline no-underline">{brand.email}</a>
          </span>
        </div>
      </div>
    </Container>
  </Section>

  <!-- Person Schema Markup (keep below) -->
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "ProfilePage",
    "mainEntity": {
      "@type": "Person",
      "name": "Nick Brewer",
      "jobTitle": "ERP Administrator & Prophet 21 Consultant",
      "description": "Founder of Lumina Erp. Working ERP administrator who uses Prophet 21 daily at a wholesale distribution company.",
      "url": "https://luminatech.xyz/about",
      "worksFor": {
        "@type": "Organization",
        "name": "Lumina Erp",
        "url": "https://luminatech.xyz"
      },
      "address": {
        "@type": "PostalAddress",
        "addressLocality": "Humble",
        "addressRegion": "TX",
        "addressCountry": "US"
      },
      "knowsAbout": [
        "Prophet 21",
        "Epicor ERP",
        "C# .NET Development",
        "SQL Server",
        "Python",
        "Wholesale Distribution",
        "ERP Consulting",
        "Cloud Migration"
      ]
    }
  })} />

</BaseLayout>

<style>
  /* ── Hero gradient text ── */
  .about-gradient-text {
    background: linear-gradient(135deg, #3B82F6, #8B5CF6, #06B6D4, #3B82F6);
    background-size: 300% 300%;
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    animation: about-gradient-shift 6s ease infinite;
  }

  @keyframes about-gradient-shift {
    0%, 100% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
  }

  .about-hero-section {
    position: relative;
  }

  .about-orb-1 {
    animation: about-drift 12s ease-in-out infinite;
  }

  .about-orb-2 {
    animation: about-drift 10s ease-in-out infinite reverse;
  }

  @keyframes about-drift {
    0%, 100% { transform: translate(0, 0); }
    33% { transform: translate(20px, -15px); }
    66% { transform: translate(-15px, 10px); }
  }

  /* ── Credential cards hover ── */
  .about-credential-card {
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .about-credential-card:hover {
    border-color: rgba(59, 130, 246, 0.3);
    transform: translateY(-3px);
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.3), 0 0 20px rgba(59, 130, 246, 0.06);
  }

  .about-metric-value {
    transition: text-shadow 0.3s ease;
  }

  .about-credential-card:hover .about-metric-value {
    text-shadow: 0 0 20px rgba(59, 130, 246, 0.4);
  }

  /* ── Process timeline cards ── */
  .about-process-card {
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .about-process-card:hover {
    border-color: rgba(59, 130, 246, 0.3);
    transform: translateY(-3px);
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.3), 0 0 20px rgba(59, 130, 246, 0.06);
  }

  .about-step-number {
    color: rgba(59, 130, 246, 0.2);
    transition: color 0.3s ease;
  }

  .about-process-card:hover .about-step-number {
    color: rgba(59, 130, 246, 0.5);
  }

  .about-timeline-connector {
    transition: border-color 0.3s ease;
  }

  /* ── Foundation cards hover ── */
  .about-foundation-card {
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .about-foundation-card:hover {
    border-color: rgba(59, 130, 246, 0.3);
    transform: translateY(-4px);
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.3), 0 0 20px rgba(59, 130, 246, 0.06);
  }

  .about-icon-wrap {
    transition: transform 0.3s ease, background-color 0.3s ease;
  }

  .about-foundation-card:hover .about-icon-wrap {
    transform: scale(1.1);
    background-color: rgba(59, 130, 246, 0.15);
  }

  /* ── Reduced motion ── */
  @media (prefers-reduced-motion: reduce) {
    .about-gradient-text { animation: none; }
    .about-orb-1, .about-orb-2 { animation: none; }
    .about-credential-card:hover,
    .about-process-card:hover,
    .about-foundation-card:hover {
      transform: none;
    }
    .about-foundation-card:hover .about-icon-wrap {
      transform: none;
    }
  }
</style>

