---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import Container from '../../components/ui/Container.astro';
import Section from '../../components/ui/Section.astro';
import Badge from '../../components/ui/Badge.astro';
import Button from '../../components/ui/Button.astro';
import GlowText from '../../components/ui/GlowText.astro';
import CaseStudyCTA from '../../components/ui/CaseStudyCTA';
import { caseStudiesPage } from '../../content/copy';

const allStudies = await getCollection('caseStudies');
const studies = allStudies.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
const featured = studies.find(s => s.data.featured);
const others = studies.filter(s => !s.data.featured);
---

<BaseLayout
  title="Case Studies"
  description="Real results from real distributors. See how Prophet 21 customization, reporting, and automation have transformed operations for wholesale distribution companies."
>
  <!-- ═══════════════════════════════════════════════════════════════════════════
       HERO SECTION
       Compelling headline + aggregate metrics
  ═══════════════════════════════════════════════════════════════════════════ -->
  <Section background="base" padding="lg" class="relative overflow-hidden">
    <!-- Ambient gradient -->
    <div class="absolute inset-0 pointer-events-none" aria-hidden="true">
      <div class="absolute top-0 right-0 w-[500px] h-[500px] bg-accent-primary/5 rounded-full blur-[120px] -translate-y-1/3 translate-x-1/4"></div>
      <div class="absolute bottom-0 left-0 w-[400px] h-[400px] bg-accent-violet/5 rounded-full blur-[100px] translate-y-1/3 -translate-x-1/4"></div>
    </div>

    <Container class="relative">
      <div class="max-w-3xl mx-auto text-center scroll-reveal">
        <Badge variant="primary" class="mb-6">Client Success Stories</Badge>

        <h1 class="text-[length:var(--font-size-hero)] font-bold leading-[1.1] text-text-primary mb-6 whitespace-pre-line">
          {caseStudiesPage.hero.headline}
        </h1>

        <p class="text-[length:var(--font-size-body-lg)] text-text-secondary leading-relaxed max-w-2xl mx-auto mb-10">
          {caseStudiesPage.hero.subheadline}
        </p>

        <!-- Aggregate metrics -->
        <div class="flex flex-wrap items-center justify-center gap-8 sm:gap-12 md:gap-16">
          {caseStudiesPage.aggregateMetrics.map((metric) => (
            <div class="text-center">
              <div class="font-mono text-2xl md:text-3xl font-bold text-accent-primary">
                {metric.value}
              </div>
              <div class="text-xs text-text-tertiary mt-1 uppercase tracking-wider">
                {metric.label}
              </div>
            </div>
          ))}
        </div>
      </div>
    </Container>
  </Section>

  <!-- ═══════════════════════════════════════════════════════════════════════════
       FEATURED CASE STUDY SPOTLIGHT
       Full-width highlight with key metrics and before/after
  ═══════════════════════════════════════════════════════════════════════════ -->
  {featured && (() => {
    const metricEntries = Object.entries(featured.data.metrics).slice(0, 3);
    return (
      <Section background="surface-1" padding="md">
        <Container>
          <div class="scroll-reveal">
            <div class="relative overflow-hidden rounded-2xl border border-accent-primary/20 bg-bg-surface-1">
              <!-- Spotlight glow -->
              <div class="absolute inset-0 pointer-events-none" aria-hidden="true">
                <div class="absolute top-0 left-1/2 -translate-x-1/2 w-[400px] h-[200px] bg-accent-primary/8 rounded-full blur-[80px]"></div>
              </div>

              <div class="relative z-10 p-6 md:p-10 lg:p-12">
                <!-- Header -->
                <div class="flex flex-wrap items-center gap-2 mb-6">
                  <Badge variant="success">Featured</Badge>
                  <Badge variant="primary">{featured.data.industry}</Badge>
                </div>

                <div class="grid grid-cols-1 lg:grid-cols-5 gap-8 lg:gap-12">
                  <!-- Left: Content -->
                  <div class="lg:col-span-3">
                    <h2 class="text-[length:var(--font-size-h3)] md:text-[length:var(--font-size-h2)] font-bold text-text-primary leading-tight mb-4">
                      {featured.data.title}
                    </h2>

                    <p class="text-text-secondary leading-relaxed mb-6">
                      {featured.data.summary}
                    </p>

                    <div class="flex flex-wrap gap-2 mb-6">
                      {featured.data.services.map((service) => (
                        <span class="text-xs px-2.5 py-1 rounded-md bg-accent-primary/10 text-accent-primary font-medium">
                          {service}
                        </span>
                      ))}
                    </div>

                    <a
                      href={`/case-studies/${featured.data.slug}/`}
                      class="inline-flex items-center gap-2 px-6 py-3 bg-accent-primary hover:bg-accent-primary-hover text-white font-semibold rounded-lg transition-all duration-fast shadow-glow hover:shadow-glow-lg no-underline"
                    >
                      Read Full Case Study
                      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                        <path d="M5 12h14" /><path d="m12 5 7 7-7 7" />
                      </svg>
                    </a>
                  </div>

                  <!-- Right: Metrics -->
                  <div class="lg:col-span-2">
                    <div class="space-y-4">
                      {metricEntries.map(([key, metric]) => (
                        <div class="p-4 rounded-xl bg-bg-surface-2/60 border border-border/50">
                          <div class="text-accent-primary font-bold text-2xl md:text-3xl font-mono mb-1">
                            {metric.improvement}
                          </div>
                          <div class="text-text-secondary text-sm font-medium capitalize mb-1">
                            {key.replace(/([A-Z])/g, ' $1').trim()}
                          </div>
                          <div class="text-text-tertiary text-xs">
                            {metric.before} &rarr; {metric.after}
                          </div>
                        </div>
                      ))}
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </Container>
      </Section>
    );
  })()}

  <!-- ═══════════════════════════════════════════════════════════════════════════
       OTHER CASE STUDIES
       Card grid with micro-CTAs
  ═══════════════════════════════════════════════════════════════════════════ -->
  {others.length > 0 && (
    <Section background="base" padding="md">
      <Container>
        <div class="max-w-3xl mx-auto text-center mb-10 scroll-reveal">
          <h2 class="text-[length:var(--font-size-h3)] font-bold text-text-primary mb-3">
            More Success Stories
          </h2>
          <p class="text-text-secondary">
            Each project below solved a specific P21 challenge with measurable results.
          </p>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
          {others.map((study, i) => {
            const metricEntries = Object.entries(study.data.metrics).slice(0, 3);
            return (
              <a
                href={`/case-studies/${study.data.slug}/`}
                class="group block bg-bg-surface-1 rounded-xl border border-border p-6 md:p-8 hover:border-accent-primary hover:-translate-y-1 transition-all duration-normal shadow-card hover:shadow-card-hover no-underline scroll-reveal"
                style={`animation-delay: ${i * 100}ms;`}
              >
                <div class="flex flex-wrap items-center gap-2 mb-4">
                  <Badge variant="primary">{study.data.industry}</Badge>
                </div>

                <h3 class="text-[length:var(--font-size-h4)] font-semibold leading-snug mb-3 text-text-primary group-hover:text-accent-primary transition-colors duration-fast">
                  {study.data.title}
                </h3>

                <p class="text-text-secondary text-sm leading-relaxed mb-6 line-clamp-3">
                  {study.data.summary}
                </p>

                <div class="grid grid-cols-3 gap-4 mb-6 p-4 rounded-lg bg-bg-surface-2/50 border border-border/50">
                  {metricEntries.map(([, metric]) => (
                    <div class="text-center">
                      <div class="text-accent-primary font-bold text-lg md:text-xl font-mono">{metric.improvement}</div>
                      <div class="text-text-tertiary text-xs mt-1">{metric.before} &rarr; {metric.after}</div>
                    </div>
                  ))}
                </div>

                <div class="flex items-center justify-between">
                  <div class="flex flex-wrap gap-1.5">
                    {study.data.services.map((service) => (
                      <span class="text-xs px-2 py-0.5 rounded bg-bg-surface-2 text-text-tertiary">
                        {service}
                      </span>
                    ))}
                  </div>
                  <span class="text-sm text-accent-primary font-medium group-hover:translate-x-1 transition-transform duration-fast inline-flex items-center gap-1 shrink-0">
                    Read Case Study
                    <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                      <path d="M5 12h14" /><path d="m12 5 7 7-7 7" />
                    </svg>
                  </span>
                </div>
              </a>
            );
          })}
        </div>
      </Container>
    </Section>
  )}

  <!-- ═══════════════════════════════════════════════════════════════════════════
       MID-PAGE INLINE CTA
       Contextual nudge between content sections
  ═══════════════════════════════════════════════════════════════════════════ -->
  <Section background="surface-1" padding="sm" class="py-8">
    <Container>
      <CaseStudyCTA
        client:visible
        variant="inline"
        heading=""
        subheading={caseStudiesPage.midPageCta.text}
        ctaLabel={caseStudiesPage.midPageCta.cta.label}
        ctaHref={caseStudiesPage.midPageCta.cta.href}
      />
    </Container>
  </Section>

  <!-- ═══════════════════════════════════════════════════════════════════════════
       INDUSTRY VERTICALS
       Show breadth of experience across distribution types
  ═══════════════════════════════════════════════════════════════════════════ -->
  <Section background="base" padding="md">
    <Container>
      <div class="max-w-3xl mx-auto text-center scroll-reveal">
        <h2 class="text-[length:var(--font-size-h3)] font-bold text-text-primary mb-6">
          {caseStudiesPage.industryNote.heading}
        </h2>

        <div class="flex flex-wrap items-center justify-center gap-3 mb-6">
          {caseStudiesPage.industryNote.industries.map((industry) => (
            <span class="px-4 py-2 rounded-full text-sm font-medium border border-border/60 bg-bg-surface-1/50 text-text-secondary hover:border-accent-primary/40 hover:text-text-primary transition-colors duration-fast">
              {industry}
            </span>
          ))}
        </div>

        <p class="text-text-secondary text-sm leading-relaxed max-w-xl mx-auto">
          {caseStudiesPage.industryNote.note}
        </p>
      </div>
    </Container>
  </Section>

  <!-- ═══════════════════════════════════════════════════════════════════════════
       PORTFOLIO CTA — The Strategic Closer
       Creates curiosity gap and drives to contact
  ═══════════════════════════════════════════════════════════════════════════ -->
  <Section background="surface-1" padding="lg">
    <Container>
      <CaseStudyCTA
        client:visible
        heading={caseStudiesPage.portfolioCta.heading}
        subheading={caseStudiesPage.portfolioCta.subheading}
        emphasis={caseStudiesPage.portfolioCta.emphasis}
        ctaLabel={caseStudiesPage.portfolioCta.cta.label}
        ctaHref={caseStudiesPage.portfolioCta.cta.href}
        secondaryLabel={caseStudiesPage.portfolioCta.secondaryCta.label}
        secondaryHref={caseStudiesPage.portfolioCta.secondaryCta.href}
      />
    </Container>
  </Section>
</BaseLayout>
