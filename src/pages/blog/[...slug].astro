---
import { getCollection, render } from 'astro:content';
import BlogLayout from '../../layouts/BlogLayout.astro';
import { getReadingTime } from '../../utils/reading-time';

export async function getStaticPaths() {
  const posts = await getCollection('blog', ({ data }) => !data.draft);
  return posts.map((post) => ({
    params: { slug: post.id },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await render(post);

const readingTime = getReadingTime(post.body ?? '');

const allPosts = await getCollection('blog', ({ data }) => !data.draft);
const relatedPosts = allPosts
  .filter((p) => p.id !== post.id)
  .filter((p) => p.data.tags.some((tag) => post.data.tags.includes(tag)))
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 3);
---

<BlogLayout
  title={post.data.title}
  description={post.data.description}
  pubDate={post.data.pubDate}
  updatedDate={post.data.updatedDate}
  author={post.data.author}
  tags={post.data.tags}
  image={post.data.image}
  readingTime={readingTime}
>
  <Content />

  <Fragment slot="related">
    {relatedPosts.length > 0 && (
      <section>
        <h2 class="text-[length:var(--font-size-h3)] font-bold mb-6">Related Articles</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
          {relatedPosts.map((related) => (
            <a
              href={`/blog/${related.id}/`}
              class="block bg-bg-surface-1 rounded-xl border border-border p-5 hover:border-accent-primary hover:-translate-y-1 transition-all duration-300"
            >
              <span class="text-xs font-medium uppercase tracking-wider text-accent-primary">
                {related.data.tags[0]}
              </span>
              <h3 class="text-sm font-semibold mt-2 mb-1 text-text-primary leading-snug">
                {related.data.title}
              </h3>
              <time
                datetime={related.data.pubDate.toISOString()}
                class="text-xs text-text-tertiary"
              >
                {related.data.pubDate.toLocaleDateString('en-US', {
                  month: 'short',
                  day: 'numeric',
                  year: 'numeric',
                })}
              </time>
            </a>
          ))}
        </div>
      </section>
    )}
  </Fragment>
</BlogLayout>
