---
interface Props {
  hover?: boolean;
  glow?: boolean;
  class?: string;
  padding?: 'sm' | 'md' | 'lg';
}

const {
  hover = true,
  glow = false,
  class: className = '',
  padding = 'md',
} = Astro.props;

const paddingClasses = {
  sm: 'p-4',
  md: 'p-6 md:p-8',
  lg: 'p-8 md:p-10',
};

const classes = [
  'bg-bg-surface-1 rounded-lg border border-border',
  paddingClasses[padding],
  hover ? 'transition-all duration-normal ease-out hover:border-accent-primary/60 hover:-translate-y-1 hover:shadow-lg hover:shadow-accent-primary/5' : '',
  glow ? 'shadow-glow' : '',
  className,
].filter(Boolean).join(' ');
---

<div class={classes}>
  <slot />
</div>
