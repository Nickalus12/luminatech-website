---
import FooterNewsletter from './FooterNewsletter';

const currentYear = new Date().getFullYear();

const serviceLinks = [
  { label: 'P21 Extensions & DynaChange', href: '/services#extensions' },
  { label: 'API Integration Services', href: '/services#integrations' },
  { label: 'Database Optimization', href: '/services#database' },
  { label: 'Warehouse Automation', href: '/services#warehouse' },
  { label: 'Custom Portal Development', href: '/services#portals' },
  { label: 'System Administration', href: '/services#support' },
];

const resourceLinks = [
  { label: 'Roadmap', href: '/roadmap' },
  { label: 'Case Studies', href: '/case-studies' },
  { label: 'About', href: '/about' },
  { label: 'Contact', href: '/contact' },
];
---

<footer class="bg-bg-base border-t border-border relative" transition:persist>
  <!-- Subtle gradient accent line at the top -->
  <div class="absolute top-0 left-1/2 -translate-x-1/2 w-[400px] h-px bg-gradient-to-r from-transparent via-accent-primary/30 to-transparent" aria-hidden="true"></div>

  <div class="w-full max-w-7xl mx-auto px-4 md:px-6 py-16 md:py-20">
    <nav aria-label="Footer navigation" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 md:gap-12 lg:gap-8">
      <!-- Brand -->
      <div class="lg:col-span-1">
        <a href="/" class="inline-flex items-center gap-2 text-text-primary no-underline mb-4">
          <img src="/logo-64.png" alt="Lumina ERP" class="w-8 h-8 shrink-0 object-contain" width="32" height="32" loading="lazy" />
          <span class="text-xl font-bold tracking-tight">LUMINA<span class="text-accent-primary"> ERP</span></span>
        </a>
        <p class="text-text-secondary text-sm leading-relaxed max-w-xs">
          Illuminate your ERP potential. Expert ERP consulting for wholesale distributors and beyond.
        </p>
        <p class="text-text-tertiary text-sm mt-4">
          Based in Humble, TX<br />Serving distributors nationwide
        </p>

        <!-- Social icons -->
        <div class="flex items-center gap-3 mt-5">
          <a
            href="https://www.linkedin.com/company/lumina-erp/"
            target="_blank"
            rel="noopener noreferrer"
            class="w-9 h-9 rounded-lg bg-bg-surface-2 flex items-center justify-center text-text-tertiary hover:text-accent-primary hover:bg-bg-surface-3 transition-all duration-fast"
            aria-label="LinkedIn"
          >
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 01-2.063-2.065 2.064 2.064 0 112.063 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
            </svg>
          </a>
          <a
            href="https://github.com/LuminaHQ"
            target="_blank"
            rel="noopener noreferrer"
            class="w-9 h-9 rounded-lg bg-bg-surface-2 flex items-center justify-center text-text-tertiary hover:text-accent-primary hover:bg-bg-surface-3 transition-all duration-fast"
            aria-label="GitHub"
          >
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
              <path d="M12 0C5.374 0 0 5.373 0 12c0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23A11.509 11.509 0 0112 5.803c1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576C20.566 21.797 24 17.3 24 12c0-6.627-5.373-12-12-12z"/>
            </svg>
          </a>
        </div>
      </div>

      <!-- Services -->
      <div>
        <h3 class="text-text-primary text-sm font-semibold uppercase tracking-wider mb-4">Services</h3>
        <ul class="list-none m-0 p-0 flex flex-col gap-2.5">
          {serviceLinks.map(({ label, href }) => (
            <li>
              <a
                href={href}
                class="text-text-secondary text-sm hover:text-text-primary transition-colors duration-fast no-underline"
              >
                {label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Resources -->
      <div>
        <h3 class="text-text-primary text-sm font-semibold uppercase tracking-wider mb-4">Resources</h3>
        <ul class="list-none m-0 p-0 flex flex-col gap-2.5">
          {resourceLinks.map(({ label, href }) => (
            <li>
              <a
                href={href}
                class="text-text-secondary text-sm hover:text-text-primary transition-colors duration-fast no-underline"
              >
                {label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Connect -->
      <div>
        <h3 class="text-text-primary text-sm font-semibold uppercase tracking-wider mb-4">Connect</h3>
        <ul class="list-none m-0 p-0 flex flex-col gap-3">
          <li>
            <a
              href="tel:+18325397550"
              class="text-text-secondary text-sm hover:text-text-primary transition-colors duration-fast no-underline inline-flex items-center gap-2"
            >
              <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="shrink-0 opacity-60" aria-hidden="true">
                <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>
              </svg>
              (832) 539-7550
            </a>
          </li>
          <li>
            <a
              href="mailto:Support@Lumina-ERP.com"
              class="text-text-secondary text-sm hover:text-text-primary transition-colors duration-fast no-underline inline-flex items-center gap-2"
            >
              <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="shrink-0 opacity-60" aria-hidden="true">
                <rect width="20" height="16" x="2" y="4" rx="2"/>
                <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/>
              </svg>
              Support@Lumina-ERP.com
            </a>
          </li>
        </ul>

        <!-- Newsletter signup -->
        <div class="mt-5 pt-4 border-t border-border/50">
          <p class="text-text-secondary text-sm mb-3">P21 tips & updates</p>
          <FooterNewsletter client:idle />
        </div>

        <div class="mt-4">
          <a
            href="/contact"
            class="inline-flex items-center gap-2 text-sm font-medium text-accent-primary hover:text-accent-primary-hover transition-colors duration-fast no-underline"
          >
            Get in touch
            <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
              <path d="M5 12h14"/>
              <path d="m12 5 7 7-7 7"/>
            </svg>
          </a>
        </div>
      </div>
    </nav>

    <!-- Bottom bar -->
    <div class="mt-12 pt-8 border-t border-border flex flex-col sm:flex-row items-center justify-between gap-4">
      <p class="text-text-tertiary text-sm">
        &copy; {currentYear} <span class="font-semibold">LUMINA</span> <span class="text-accent-primary font-semibold">ERP</span>. All rights reserved.
      </p>
      <div class="flex items-center gap-6">
        <a href="/privacy" class="text-text-tertiary text-sm hover:text-text-secondary transition-colors duration-fast no-underline">
          Privacy Policy
        </a>
        <a href="/terms" class="text-text-tertiary text-sm hover:text-text-secondary transition-colors duration-fast no-underline">
          Terms of Service
        </a>
      </div>
    </div>
  </div>
</footer>
